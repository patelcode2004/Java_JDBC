import java.sql.*;

public class FetchEmployeeData {
    public static void main(String[] args) {
        String url = "jdbc:mysql://localhost:3306/springSecurity";
        String user = "root";
        String password = "Vishal@2026";

        try {
            Class.forName("com.mysql.cj.jdbc.Driver");
            Connection con = DriverManager.getConnection(url, user, password);
            System.out.println("âœ… Connected Successfully!");

            Statement stmt = con.createStatement();
            ResultSet rs = stmt.executeQuery("SELECT EmpID, Name, Salary FROM Employee");

            System.out.println("\n--- Employee Data ---");
            while (rs.next()) {
                System.out.printf("%d | %s | %.2f%n",
                        rs.getInt("EmpID"),
                        rs.getString("Name"),
                        rs.getDouble("Salary"));
            }

            rs.close();
            stmt.close();
            con.close();
        } catch (Exception e) {
            e.printStackTrace();
        }
    }
}
